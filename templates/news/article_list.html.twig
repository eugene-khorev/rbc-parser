{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>RBC parser</h1>
        <h2>Список последних новостей</h2>
        {% for article in articles %}
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">{{ article.title }} ({{ article.publishedAt|date("d/m/Y - H:i") }})</h3>
                    <p class="card-text">{{ article.body }}</p>
                    <a href="/news/{{ article.id }}" class="btn btn-primary">Читать дальше</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
