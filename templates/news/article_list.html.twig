{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {% for article in articles %}
            <div class="card mb-3">
                <div class="card-body">
                    <h2 class="card-title">{{ article.title }} ({{ article.publishedAt|date("d/m/Y - H:i") }})</h2>
                    <p class="card-text">{{ article.body|truncate(200, true, '...') }}</p>
                    <a href="{{ path('news_details', {id: article.id}) }}" class="btn btn-primary">Читать дальше</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
