{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">{{ article.title }} ({{ article.publishedAt|date("d/m/Y - H:i") }})</h2>
                {% if article.imageUrl %}
                    <p class="card-text"><img class="card-img-top" src="{{ article.imageUrl }}" alt="{{ article.title }}"></p>
                {% endif %}
                <p class="card-text">{{ article.body }}</p>
                <a href="{{ path('news_list') }}" class="btn btn-primary">Список новостей</a>
            </div>
        </div>
    </div>
{% endblock %}
